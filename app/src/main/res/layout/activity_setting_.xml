<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hangman.love1.longmandictionaryvocabularytest.Setting_Activity">

    <TextView
        android:id="@+id/setting_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="107dp"
        android:text="@string/setting_message"
        android:textSize="24sp"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/start_button_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_button_setting"
        android:onClick="onStartButtonClickSetting"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp">
    </Button>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:onClick="onSwitch1Click"
        android:text="All " />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animals "
        android:layout_alignBaseline="@+id/switch3"
        android:layout_alignBottom="@+id/switch3"
        android:layout_toLeftOf="@+id/switch3"
        android:layout_toStartOf="@+id/switch3"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Occupation " />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:layout_alignBaseline="@+id/switch3"
        android:layout_alignBottom="@+id/switch3"
        android:layout_toRightOf="@+id/switch3"
        android:layout_toEndOf="@+id/switch3"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />
</RelativeLayout>
